<div class="container w-50">
        <div class="my-5">
            <h1 class="text-center">Registro</h1>
        </div>
        <div class="w-50 mx-auto">
            <form method="post" action="/registro">
                <div class="form-group">
                    <label for="username">Nombre de usuario<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="pass">Contraseña<span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="pass" id="pass">
                </div>
                <div class="form-group">
                    <label for="mail">Dirección de correo<span class="text-danger">*</span></label>
                    <input type="email" class="form-control" name="email" id="email">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-info mt-3">Registrarse</button>
                </div>
            </form>
            <p class="text-danger text-center mt-3">{{message}}</p>
        </div>
</div>