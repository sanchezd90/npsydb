<div class="container w-50">
    <div class="my-5">
        <h1 class="text-center">Actualizar datos de la prueba</h1>
    </div>
    <div class="mx-auto">
        <form method="post" action="/admin/pruebas/update/{{prueba.id}}">
            <div class="form-group">
                <label for="nombre_principal">Nombre original</label>
                <input type="text" class="form-control" name="nombre_principal" id="nombre_principal" value="{{prueba.nombre_principal}}">
            </div>
            <img src="/images/{{image.uuid}}" alt="no hay imagen" style="height : 50px">
            <div class="form-group">
                <label for="ref_publicacion">Referencia</label>
                <input type="text" class="form-control" name="ref_publicacion" id="ref_publicacion" value="{{prueba.ref_publicacion}}">
            </div>
            <div>
                <label for="dominio_principal">Dominio cognitivo</label>
                <select class="form-select" aria-label="Default select example" name="dominio_principal" id="dominio_principal">
                    <option selected>{{dominio.es}}</option>
                    {{#each dominios}}
                    <option value="{{id}}">{{es}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="imagen">Modificar imagen<span class="text-danger">*</span></label>
                <input type="file" name="uuid" id="uuid">
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-info mt-3">Actualizar</button>
            </div>
        </form>
    </div>
</div>