<div class="container w-50">
    <div class="my-5">
        <h1 class="text-center">Ingresar una nueva prueba</h1>
    </div>
    <div class="mx-auto">
        <form method="post" action="/admin/pruebas/create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="es">Nombre original</label>
                <input type="text" class="form-control" name="nombre_principal" id="nombre_principal">
            </div>
            <div class="form-group">
                <label for="en">Referencia</label>
                <input type="text" class="form-control" name="ref_publicacion" id="ref_publicacion">
            </div>
            <select class="form-select" aria-label="Default select example" name="dominio_principal" id="dominio_principal">
                <option selected>Dominio cognitivo</option>
                {{#each dominios}}
                <option value="{{id}}">{{es}}</option>
                {{/each}}
            </select>
            <div class="form-group">
                <label for="imagen">Agregar imagen<span class="text-danger">*</span></label>
                <input type="file" name="imagen" id="imagen">
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-info mt-3">Crear</button>
            </div>
        </form>
    </div>
</div>