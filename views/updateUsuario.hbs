<div class="container w-50">
    <div class="my-5">
        <h1 class="text-center">Actualizar datos de usuario</h1>
    </div>
    <div class="mx-auto">
        <h5>{{registro.username}}</h5>
        <form method="post" action="/admin/usuarios/update/{{registro.id}}">
            <div class="form-group">
                <label for="es">Email</label>
                <input type="text" class="form-control" name="email" id="email" value="{{registro.email}}">
            </div>
            <div class="form-group">
                <label for="en">Habilitado</label>
                <input type="text" class="form-control" name="habilitado" id="habilitado" value="{{registro.habilitado}}">
            </div>
            <div class="form-group">
                <label for="en">Admin</label>
                <input type="text" class="form-control" name="admin" id="admin" value="{{registro.admin}}">
            </div>
            <div class="form-group">
                <label for="en">Colaborador</label>
                <input type="text" class="form-control" name="contributor" id="contributor" value="{{registro.contributor}}">
            </div>
            <div class="form-group">
                <label for="en">Eliminado</label>
                <input type="text" class="form-control" name="deleted" id="deleted" value="{{registro.deleted}}">
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-info mt-3">Actualizar</button>
            </div>
        </form>
    </div>
</div>